<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:id="@+id/image_holder"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="50dp"/>

    <RelativeLayout
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_holder"
        android:background="@android:color/transparent"
        android:paddingBottom="12dp">

        <com.adrianlesniak.gamerspot.views.GamerSpotTextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/feed_creator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/feed_item_date"
            android:textStyle=""
            android:textSize="12sp" />

        <com.adrianlesniak.gamerspot.views.GamerSpotTextView
            android:id="@+id/feed_creator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/feed_date"
            android:singleLine="true"
            android:textColor="@color/feed_item_creator"
            android:textSize="12sp" />

        <com.adrianlesniak.gamerspot.views.GamerSpotTextView
            android:id="@+id/feed_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_creator"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/feed_item_title"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>