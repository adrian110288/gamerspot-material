<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="0dp"
    android:background="#EEEEEE">

    <LinearLayout
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.adrianlesniak.gamerspot.views.FeedImage
            android:id="@+id/feed_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/details_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:elevation="4dp"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp">

            <com.adrianlesniak.gamerspot.views.GamerSpotTextView
                android:id="@+id/details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:textSize="28sp" />

            <com.adrianlesniak.gamerspot.views.GamerSpotTextView
                android:id="@+id/details_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_title"
                android:textSize="16sp" />

            <com.adrianlesniak.gamerspot.views.GamerSpotTextView
                android:id="@+id/details_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/details_creator"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/details_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.adrianlesniak.gamerspot.views.GamerSpotTextView
                android:id="@+id/details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:textColor="#263238"
                android:textSize="19sp" />

        </LinearLayout>

        <!--<com.adrianlesniak.gamerspot.views.GamerSpotButton-->
        <!--android:id="@+id/button_full_article"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:onClick="goToFullArticle"-->
        <!--custom:type="article" />-->

    </LinearLayout>

</ScrollView>